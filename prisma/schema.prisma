generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @db.Uuid @default(uuid()) 
  name String @db.VarChar(150)
  userName String @unique @db.VarChar(100) @map("user_name")
  email String @unique
  password String @db.VarChar(100)  
  imageUrl String? @db.VarChar(500) @map("image_url")
  
  tweets Tweet[]
  likes Like[]


  followers Follow[] @relation("followers")
  following Follow[] @relation("following")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Tweet {
  id String @id @db.Uuid @default(uuid())
  content String

  parentId String? @db.Uuid @map("parent_id") 
  parent Tweet? @relation("replies", fields: [parentId], references: [id])
  replies Tweet[] @relation("replies")

  likes Like[]

  userId String @db.Uuid @map("id_user")
  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tweet")
}

model Like { 
  userId String @db.Uuid @map("id_user")
  tweetId String @db.Uuid @map("id_tweet")

  user User @relation(fields: [userId], references: [id])
  tweet Tweet @relation(fields: [tweetId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@id([userId, tweetId])
  @@map("like")
}

model Follow {
  followerId String @db.Uuid @map("follower_id")
  followingId String @db.Uuid @map("following_id")

  follower User @relation("following", fields: [followerId], references: [id])
  following User @relation("followers", fields: [followingId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  @@id([followerId, followingId])
  @@map("follow")
}
