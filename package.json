{
  "name": "api-growtwitter",
  "version": "1.0.0",
  "description": "API REST de um jogo desenvolvida com Node.js, Express e Prisma ORM para CRUD.",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate:dev": "dotenv -e .env.dev -- npx prisma migrate dev",
    "db:push:dev": "dotenv -e .env.dev -- npx prisma db push",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "db:push:test": "dotenv -e .env.test -- npx prisma db push",
    "test": "dotenv -e .env.test -- jest",
    "test:coverage": "dotenv -e .env.test -- jest --coverage",
    "test:watch": "dotenv -e .env.test -- jest --watch"
  },
  "keywords": [],
  "author": "Iara Tassi",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^8.3.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
